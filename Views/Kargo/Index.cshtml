@model IEnumerable<alisveris.Models.Kargo>

@{
    ViewData["Title"] = "Kargo Listesi";
}

<h1>Kargo Listesi</h1>

<a asp-action="Create" class="btn btn-primary">Yeni Kargo Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Takip Numarası</th>
            <th>Durum</th>
            <th>Kargo Şirketi</th>
            <th>Sipariş ID</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kargo in Model)
        {
            <tr>
                <td>@kargo.TakipNo</td>
                <td>@kargo.Durum</td>
                <td>@kargo.KargoSirketi</td>
                <td>@kargo.SiparisID</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@kargo.KargoID" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@kargo.KargoID" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>