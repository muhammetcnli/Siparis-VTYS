@model alisveris.Models.Kargo

@{
    ViewData["Title"] = "Yeni Kargo Ekle";
}


@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<h1>Yeni Kargo Ekle</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Durum">Durum</label>
        <input asp-for="Durum" class="form-control" />
        <span asp-validation-for="Durum" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="TakipNo">Takip No</label>
        <input asp-for="TakipNo" class="form-control" maxlength="6" />
        <span asp-validation-for="TakipNo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="KargoSirketi">Kargo Şirketi</label>
        <input asp-for="KargoSirketi" class="form-control" />
        <span asp-validation-for="KargoSirketi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="SiparisID">Sipariş ID</label>
        <input asp-for="SiparisID" class="form-control" />
        <span asp-validation-for="SiparisID" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>