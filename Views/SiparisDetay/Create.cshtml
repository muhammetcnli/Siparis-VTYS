@model alisveris.Models.SiparisDetayi

<h2>Yeni Sipariş Detayı Ekle</h2>

<form method="post">
    <div class="form-group">
        <label for="SiparisID">Sipariş ID</label>
        <input type="number" name="SiparisID" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Miktar">Miktar</label>
        <input type="number" name="Miktar" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="AraToplam">Ara Toplam</label>
        <input type="number" name="AraToplam" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
