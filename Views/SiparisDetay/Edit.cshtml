@model alisveris.Models.SiparisDetayi

@{
    ViewData["Title"] = "Sipariş Detayını Düzenle";
}

<h1>Sipariş Detayını Düzenle</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="DetayID" />
    
    <div class="form-group">
        <label for="Miktar">Miktar</label>
        <input asp-for="Miktar" class="form-control" />
        <span asp-validation-for="Miktar" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="SiparisID">SiparisID</label>
        <input asp-for="SiparisID" class="form-control" />
        <span asp-validation-for="SiparisID" class="text-danger"></span>
    </div>  
    <div class="form-group">
        <label for="AraToplam">Ara Toplam</label>
        <input asp-for="AraToplam" class="form-control" />
        <span asp-validation-for="AraToplam" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
