@using Microsoft.AspNetCore.Identity


@if (Context.User.Identity?.Name != null)
{
    <form asp-controller="Account" asp-action="LogOut" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                Hoşgeldin @Context.User.Identity.Name!
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Çıkış Yap</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="nav-link text-dark" asp-controller="Account" asp-action="Kayit">Kaydol</a></li>
        <li><a class="nav-link text-dark" asp-controller="Account" asp-action="Giris">Giriş Yap</a></li>
    </ul>
}
